#!/bin/bash

set -e

curl --fail -o unittest2-1.1.0.tar.gz https://rpm.manageiq.org/sources_cache/python-unittest2/unittest2-1.1.0.tar.gz

/usr/bin/mock --spec=./python-unittest2.spec -r centos-stream-9-$(uname -m) --sources=./ --no-bootstrap-image

mkdir -p result
cp /var/lib/mock/*/result/*.rpm result/
