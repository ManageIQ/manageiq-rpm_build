#!/bin/bash

REGISTRY=${REGISTRY:-"docker.io"}
ORGANIZATION=${ORGANIZATION:-"manageiq"}
DEFAULT_TAG="latest"
[[ $TRAVIS_BRANCH != "master" ]] && DEFAULT_TAG="$DEFAULT_TAG-$TRAVIS_BRANCH"
TAG=${TAG:-"$DEFAULT_TAG"}
IMAGE_NAME=$REGISTRY/$ORGANIZATION/rpm_build:$TAG

set -e

bundle
BUNDLER_VERSION=$(ruby -I lib -r manageiq-rpm_build -e "puts ManageIQ::RPMBuild::OPTIONS['bundler_version']")

docker build . -t $IMAGE_NAME --build-arg BUNDLER_VERSION=$BUNDLER_VERSION

[[ $TRAVIS_PULL_REQUEST != "false" ]] && exit 0

echo "$REGISTRY_PASSWORD" | docker login $REGISTRY -u $REGISTRY_USERNAME --password-stdin

docker push $IMAGE_NAME

set +e
