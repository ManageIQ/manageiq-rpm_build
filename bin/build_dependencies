#!/bin/bash

set -e

pushd packages
  docker build . -t localhost/mock:latest

  packages="kafka repmgr13"
  for package in $packages
  do
    echo "Building $package"
    pushd $package
      docker run --rm --privileged --cap-add SYS_ADMIN -v .:/work:z localhost/mock:latest ./build
      ls -al result/
    popd
  done

  echo "Done!"
popd

set +e
