%package core
Summary:  %{product_summary} Core

Requires: ruby
Requires: %{name}-gemset = %{version}-%{release}

Requires: ansible
Requires: ansible-runner
Requires: cockpit
Requires: cockpit-ssh
Requires: cockpit-ws
Requires: git
Requires: net-snmp
Requires: net-snmp-libs
Requires: net-snmp-utils
Requires: socat

%description core
%{product_summary} Core

%posttrans core
# 'bin' needs to be copied, not symlinked
[[ -e /var/www/miq/vmdb/bin ]] && rm -rf /var/www/miq/vmdb/bin
cp -r %{gemset_root}/vmdb/bin /var/www/miq/vmdb/bin

files=".bundle Gemfile.lock"
for file in ${files}
do
  [[ -e /var/www/miq/vmdb/${file} ]] && rm -rf /var/www/miq/vmdb/${file}
  ln -s %{gemset_root}/vmdb/${file} /var/www/miq/vmdb/${file}
done

%post core
%{__cp} -f %{app_root}/config/cable.yml.sample %{app_root}/config/cable.yml

%files core
%defattr(-,root,root,775)
%{app_root}
%{_prefix}/lib/systemd/system/manageiq-cockpit_ws*
%{_prefix}/lib/systemd/system/manageiq-ems_metrics_processor*
%{_prefix}/lib/systemd/system/manageiq-event_handler*
%{_prefix}/lib/systemd/system/manageiq-generic*
%{_prefix}/lib/systemd/system/manageiq-priority*
%{_prefix}/lib/systemd/system/manageiq-remote_console*
%{_prefix}/lib/systemd/system/manageiq-reporting*
%{_prefix}/lib/systemd/system/manageiq-schedule*
%{_prefix}/lib/systemd/system/manageiq-smart_proxy*
%{_prefix}/lib/systemd/system/manageiq-ui*
%{_prefix}/lib/systemd/system/manageiq-web_service*
%config(noreplace) %{app_root}/certs
%exclude %{app_root}/public/assets
%exclude %{app_root}/public/packs
%exclude %{app_root}/public/ui
